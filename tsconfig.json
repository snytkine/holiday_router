{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "downlevelIteration": true,
    "module": "commonjs",
    "lib": ["es2015",  "es2016", "es2017", "esnext", "es2015.collection", "es2015.core",  "es6", "es2016.array.include","DOM"],
    "outDir": "build",
    "sourceMap": true,
    "removeComments": true,
    "declaration": true,
    "declarationDir": "build/types",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"],
  "exclude":[
    "node_modules",
    //"src/sandbox",
    "build",
    "*.js"
  ]
}
