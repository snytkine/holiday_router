{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2019.array"
    ],
    "outDir": "build",
    "sourceMap": true,
    "removeComments": true,
    "declaration": true,
    "declarationDir": "build/types",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    //"src/sandbox",
    "build",
    "*.js"
  ]
}
